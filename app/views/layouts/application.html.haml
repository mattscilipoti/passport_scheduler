!!! 5
%html{ :lang => "en" }
  %head
    -# %meta{ :charset => "utf-8" } # foundation 6
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }/
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title= content_for?(:title) ? yield(:title) : "Passport Scheduler"

    -# = stylesheet_link_tag "application" # foundation 6
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true # rails
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  %body
    %header
      = top_bar_component(render('layouts/nav_links'), render('layouts/nav_links_for_auth'))
      - flash.each do |key, msg|
        = content_tag :div, msg, :id => key

    = yield
